{
  "name": "fastify-boilerplate",
  "version": "1.0.0",
  "description": "A node fastify boilerplate",
  "main": "server.js",
  "author": "Adam hopkins",
  "license": "MIT",
  "scripts": {
    "dev": "tsnd -r tsconfig-paths/register --no-notify --respawn --transpile-only ./src/server.ts",
    "build": "tsc -b tsconfig.build.json && tsc-alias",
    "start": "node -r tsconfig-paths/register ./build/src/server.js",
    "prettier": "prettier --write --ignore-path .prettierignore ."
  },
  "dependencies": {
    "@fastify/autoload": "^5.4.0",
    "@fastify/cors": "^8.1.0",
    "fastify": "4.6.0"
  },
  "devDependencies": {
    "@types/node": "18.7.20",
    "nodemon": "2.0.20",
    "prettier": "2.6.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.7.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "4.8.3"
  }
}